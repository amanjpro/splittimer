<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingTop="10dp" android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/lap_item_info_caption"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="@dimen/list_item_large"
        android:layout_weight="6"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/lap_item_split_data"
        android:layout_width="0dp"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:textSize="@dimen/list_item_large"
        android:layout_weight="6"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/lap_item_lap_data"
        android:layout_width="0dp"
        android:textColor="#000000"
        android:layout_weight="6"
        android:textSize="@dimen/list_item_large"
        android:textIsSelectable="false"
        android:layout_gravity="end"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_overflow"
        android:visibility="invisible"
        android:layout_weight="1"
        android:contentDescription="@string/overflow_caption"
        android:id="@+id/lap_item_overflow"/>
</LinearLayout>